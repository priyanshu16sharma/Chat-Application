<h4>Sign In</h4>

<form action="/logIn" method="post">
    <label for="email">Email:</label>
    <input type="email" id="email" name="email">
    <br>
    <label for="password">Password</label>
    <input type="password" id="password" name="password">
    <br>
    <input type="submit">
</form>

<% if(typeof message !=="undefined" ){ %>
    <p style="color: red;">
        <%= message %>
    </p>

    <% } %>